@import "~@styles/varibles.styl"
body,#app{
  width 100%;
  height 100%;
}

* {
  /*font-family:微软雅黑, Arial, 宋体; */
  box-sizing: border-box
 }
.p-l{
  float left
}
.p-r{
  float right
}
.clearfix:after{
        content: ""
        display: block
        height: 0
        clear:both
        visibility: hidden
}
.clearfix{
        *zoom: 1
}

.green{
  color #20A546
}
//-webkit-box-orient: vertical;
.line-1 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.line-2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.line-3 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.nob{
  border-top  0 !important
  border-left 0 !important
  border-bottom  0 !important
  border-right  0 !important
}
.good-item{
  border-bottom:1px solid rgba(230,230,230,1);
  padding 15px 15px 15px 0
  .image{
    width 100px
    img{
      width 90px
      height 90px
      border:1px solid rgba(230,230,230,1);

    }
  }
  .good{
    width calc(100% - 100px)
    .title{
      color:#1A1A1A;
      font-size:13px;
      line-height 17px
    }
    .num{
      font-size:13px;
      color:rgba(128,128,128,1);
      margin 15px 0
    }
    .price{
      color:rgba(32,165,70,1);
      font-size 14px
    }
  }

}
.cells{
  width 100%;
  box-sizing border-box
  padding 0 15px
  background #fff;
  .cell{
    background #fff;
    padding 14px 0
    font-size 14px
    font-weight:400;
    line-height: 20px;
    border-bottom 1px solid #E6E6E6
    .title{
      min-width 30%
      float left
      .title-text{
        font-size 13px
        color #989898
      }
    }
    .icon-you{
      font-size 20px
      color #ababab
    }
    .input{
      float left
    }
    .address{
      float left
      .name{
        font-size 16px
        margin-bottom 2px
      }
      .text{
        color #808080
        font-size 13px
      }
    }
    .right{
      max-width 70%
      float right
      input{
        text-align right;
      }
    }
    &:after{
      content:'\20';
      clear:both;
      height:0;
      display block
    }
    &:last-child{
      border-bottom 0
    }
  }
}

/* tab标签 */

.my-tabs {
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  background: #fff;
  .tab {
    height: 50px;
    line-height: 50px;
    border-bottom: 1px solid #e5e5e5;
    //border-top: 1px solid #e5e5e5;
    text-align: center;
    flex-grow: 1;
    font-size: 14px;
    color: #9A9A9A;
    position: relative;
    &:before{
      content: " ";
      border-right: 1px solid #e5e5e5;
      height: 20px;
      display: block;
      position: absolute;
      right: 0px;
      top: 15px;
    }
    &:last-child:before{
      border-right: 0;
    }
  }
  .active{
    color: #20A546;
    border-bottom: 2px solid #20A546;
  }
}
.van-dialog__confirm, .van-dialog__confirm:active{
  color #20A546
}
